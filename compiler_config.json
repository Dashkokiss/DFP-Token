{
	"language": "Solidity",
	"settings": {
		"evmVersion": "london",
		"optimizer": {
			"enabled": true,
			"runs": 10000
		},
		"outputSelection": {
			"*": {
				"": [
					"ast"
				],
				"*": [
					"abi",
					"metadata",
					"devdoc",
					"userdoc",
					"storageLayout",
					"evm.legacyAssembly",
					"evm.bytecode",
					"evm.deployedBytecode",
					"evm.methodIdentifiers",
					"evm.gasEstimates",
					"evm.assembly"
				]
			}
		},
		"remappings": [
            "forge-std/=lib/forge-std/src/",
			"@openzeppelin/=lib/openzeppelin-contracts/",
		]
	}
}
